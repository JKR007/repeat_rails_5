<%= error_messages_for f.object %>
<table name="Page form fields">
  <tr>
    <th>Name</th>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <th>Subject</th>
    <%= f.object.subject.name %>
  </tr> 
  <tr>
    <th>Permalink</th>
    <td><%= f.text_field :permalink %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select :position, 1..@page_count %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box :visible %></td>
  </tr>
</table>