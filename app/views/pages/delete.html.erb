<%= link_to  "<< Back to List", pages_path, :class => 'back-link' %>
<div class="subject delete">
  <h2>Delete Page</h2>
  <%= form_for @page, :method => 'delete' do |f| %>
    <p>Are you sure you want to delete this subject permanently</p>
    <p class="reference-object"><%= f.object.name %></p>
    <div class="form-buttons">
      <%= f.submit "Delete Page"%>
    </div>
  <% end %>
</div>